pipeline{ 
    agent{
        label "any"
    }
    tools {
        go "1.21.1"
    }
    stages{
        stage("workspace"){
            steps{
                sh "pwd"
                sh "ls -la"
            }
        }
        stage("Build"){
            steps{
                echo "Building application..."
                sh "id"
                sh "date"
                sh "sleep 1"
                sh "go run simple-pipeline/hello-world.go"
            }
        }

        stage("Test"){
            steps{
                echo "Testing application..."
                sh "id"
                sh "date"
                sh "sleep 1"
            }
        }

        stage("Deploy"){
            steps{
                echo "Building application..."
                sh "id"
                sh "date"
                sh "sleep 1"
            }
        }
    }
}