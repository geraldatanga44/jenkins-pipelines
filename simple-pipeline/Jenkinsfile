@library("jenkins_shared_library") _
pipeline{ 
    agent{
        label "any"
    }
    tools {
        go "1.21.1"
    }
    stages{
        stage("workspace"){
            steps{
                sh "pwd"
                sh "ls -la"
            }
        }
        stage("Build"){
            steps{
                echo "Building application..."
                call()
                sh "go build simple-pipeline/hello-web.go"
            }
        }

        stage("Test"){
            steps{
                echo "Testing application..."
                call()
                sh "go run simple-pipeline/hello-world.go"
                sh "./hello-web &"
                sh "chmod +x execute.sh"
                sh "./execute.sh"
            }
        }

        stage("Deploy"){
            steps{
                echo "Building application..."
                call()
            }
        }
    }
}